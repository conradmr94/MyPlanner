rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own user data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow access to user's subcollections (tasks, notes)
      match /{subcollection=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Team collections - allow authenticated users to read/write
    // TODO: Implement proper team membership checks in production
    match /teamSpaces/{teamId} {
      allow read, write: if request.auth != null;
    }
    
    match /teamMembers/{memberId} {
      allow read, write: if request.auth != null;
    }
    
    match /teamTasks/{taskId} {
      allow read, write: if request.auth != null;
    }
    
    match /teamNotes/{noteId} {
      allow read, write: if request.auth != null;
    }
    
    match /teamEvents/{eventId} {
      allow read, write: if request.auth != null;
    }
    
    match /teamInvitations/{invitationId} {
      allow read, write: if request.auth != null;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}